{
  "openapi": "3.0.0",
  "info": {
    "title": "MemoRise Documentation",
    "description": "API MemorRise - nodeJS | express | typescript",
    "version": "1.0"
  },
  "paths": {
    "/users": {
      "post": {
        "tags": ["User"],
        "summary": "Create User",
        "description": "Create a new user",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "name": {
                    "type": "string"
                  },
                  "username": {
                    "type": "string"
                  },
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string",
                    "minimum": 8
                  },
                  "confirm_password": {
                    "type": "string",
                    "minimum": 8
                  }
                }
              },
              "example": {
                "name": "Jonh Doe",
                "username": "jonh_doe",
                "email": "jonh_doe@email.com",
                "password": "password",
                "confirm_password": "password"
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "instance of AppError"
          }
        }
      }
    },
    "/session": {
      "post": {
        "tags": ["Session"],
        "summary": "Create a Session",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "loginField": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "401": {
            "description": "Invalid credentials!"
          }
        }
      }
    },
    "/deck": {
      "post": {
        "tags": ["Decks"],
        "summary": "Create a Deck",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string"
                  },
                  "subtitle": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "201": {
            "description": "Created"
          },
          "400": {
            "description": "This title is already in use"
          }
        }
      },
      "get": {
        "tags": ["Decks"],
        "summary": "List of User Decks",
        "security": [{ "bearerAuth": [] }],
        "responses": {
          "200": {
            "description": "Ok"
          }
        }
      },
      "put": {
        "tags": ["Decks"],
        "summary": "Update a Deck",
        "security": [{ "bearerAuth": [] }],
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "title": {
                    "type": "string"
                  },
                  "subtitle": {
                    "type": "string"
                  }
                }
              }
            }
          }
        },
        "parameters": [
          {
            "name": "list_id",
            "in": "path",
            "description": "List id",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Ok"
          },
          "404": {
            "description": "This deck does not exist"
          },
          "400": {
            "description": "This title is already in use"
          }
        }
      },
      "delete": {
        "tags": ["Decks"],
        "summary": "Delete a Deck",
        "security": [{ "bearerAuth": [] }],
        "parameters": [
          {
            "name": "id",
            "in": "header",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Ok"
          },
          "404": {
            "description": "This deck does not exist"
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
